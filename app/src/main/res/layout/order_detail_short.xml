<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/simpleTableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0"> <!-- stretch the second column of the layout-->

            <!-- first row of the table layout-->
            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- first element of the row-->
                <TextView
                    android:id="@+id/simpleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Order No."
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Order date"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Delivery Date"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalprice2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Ammount"
                    android:textColor="#000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/totalprice3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Action"
                    android:textColor="#000"
                    android:textSize="12sp" />


            </TableRow>

            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- first element of the row-->
                <TextView
                    android:id="@+id/simpleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="25"
                    android:textColor="#000"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="01-02-25"
                    android:textColor="#000"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="21-25-2018"
                    android:textColor="#000"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/totalprice4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Rs. 5000 /-"
                    android:textColor="#000"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:text="view"
                    android:textSize="10dp" />


            </TableRow>
        </TableLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>